  <ul class="nav navbar-nav">
    <li class="active">
      <a href="/members">
        <span class="member-name" id="navbar-name"></span>
      </a>
    </li>
    <li>
      <form class="navbar-form navbar-right" id="search-bar">
        <div class="form-group">
          <input type="text" class="form-control" id="user-search" placeholder="Search Users">
