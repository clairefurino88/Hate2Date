<div class="container">

  <div class="row feed-row">
    {{!-- Left Column --}}
    <div class="col-md-7" class="left-panel">
      <div class="post-area">
        <p id="liveFeedTitle" class="hate-feed">
          Hate Feed
        </p>
        <p id="share">
          Share your story...
        </p>
        <div id="h2dFeed">
          {{#each posts}}
          <div class="panel post-panel">
            <div class="panel-body">
              <div class="panel-heading postStyle">{{User.name}}</div>
              {{body}}
              <hr>
              <div class="post-category">Category: {{category}}</div>
              <div class="post-datetime">{{updatedAt}}</div>
              <br>
              <div class="like-button">
                <button class="hate-btn" type="button">I Hate That Too!</button>

                <span class="count"></span>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
    {{!-- Middle Column --}}
    <div class="col-md-1">
    </div>
    {{!-- Right Column --}}
    <div class="col-md-4">
      {{!-- Post Form Panel --}}
      <div class="panel post-form">
        <div class="panel-heading">
          <p id="liveFeedTitle" class="panel-title">Post Form</p>
        </div>
        <div class="panel-body" id="postFormPanelBody">
          <form id="cms">
            <div class="form-group">
              <textarea class="form-control" rows="10" id="postBody" placeholder="I absolutely hate..."></textarea>
              <br>
              <div class="form-group">
                <select class="custom-select" id="postCategory">

                  <option value="null" selected="" disabled="">Category...</option>
                  <option value="Coding">Coding</option>
                  <option value="Education">Education</option>
                  <option value="Entertainment">Entertainment</option>
                  <option value="Fashion">Fashion</option>
                  <option value="Food">Food</option>
                  <option value="Health">Health</option>
                  <option value="Love">Love</option>
                  <option value="Money">Money</option>
                  <option value="People">People</option>
                  <option value="Politics">Politics</option>
                  <option value="People">People</option>
                  <option value="Teens">Teens</option>
                  <option value="Transportation">Transportation</option>
                  <option value="Weather">Weather</option>

                </select>
              </div>
            </div>
          </form>
        </div>
        <div>
          <div class="postFormSubmitButton">
            <center>
              <button id="postFormSubmit" type="submit" class="btn submit btn-lg">Submit</button>
            </center>
          </div>
        </div>
      </div>
      {{!-- End of Post Form Panel --}}
    </div>
    {{!-- End of Right Column --}}
  </div>
  {{!-- End of Row --}}
</div>
