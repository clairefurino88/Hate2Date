<div class="container">

  <div class="row">

    {{!-- Left Column --}}

    <div class="col-md-7 jumbotron" class="left-panel">
      <div class="post-area">
        {{#each posts}}
        <div class="panel-heading" id="postStyle">{{category}}</div>
        <div class="panel panel-default">
          <div class="panel-body">
            {{body}}
            <div class="post-datetime">{{createdAt}}</div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Middle Column --}}
    <div class="col-md-1">
    </div>

    {{!-- Right Column --}}
    <div class="col-md-4 jumbotron">

      {{!-- Post Form Panel --}}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Post Form</h3>
        </div>
        <div class="panel-body" id="postFormPanelBody">
          <form id="cms">
            <div class="form-group">
              <textarea class="form-control" rows="10" id="postBody" placeholder="I absolutely hate..."></textarea>
              <br>
              <div class="form-group">
                <select class="custom-select" id="postCategory">
                  <option value="null" selected="" disabled="">Category...</option>
                  <option value="Donald Trump">Donald Trump</option>
                  <option value="Vegans">Vegans</option>
                  <option value="Cross Fit">Cross Fit</option>
                  <option value="Cargo Pants">Cargo Pants</option>
                  <option value="Morning Traffic">Morning Traffic</option>
                  <option value="Selfie Sticks">Selfie Sticks</option>
                  <option value="Teens">Teens</option>
                  <option value="Code That Crashes">Code that crashes</option>
                  <option value="Hillary Clinton">Hillary Clinton</option>
                  <option value="Long Lines">Long Lines</option>
                </select>
              </div>
            </div>
          </form>
        </div>
        <div class="panel-footer">
          <div class="postFormSubmitButton">
            <button id="postFormSubmit" type="submit" class="btn btn-success submit btn-lg">Submit</button>
          </div>
        </div>
      </div>
      {{!-- End of Post Form Panel --}}

    </div>
    {{!-- End of Right Column --}}

  </div>
  {{!-- End of Row --}}

</div>
{{!-- End of Container --}}

<script type="text/javascript" src="js/members.js"></script>