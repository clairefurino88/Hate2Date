<div class="container">

  <div class="row">

    {{!-- Left Column --}}

    <div class="col-md-7 jumbotron" class="left-panel">
      <div class="post-area">
        <p id="liveFeedTitle">
          Hate Feed
        </p>
        <p id="share">
          Share your story...
        </p>
        {{#each posts}}
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="panel-heading" id="postStyle">{{User.name}}:</div>
            {{body}}
            <hr>
            <div class="post-datetime">{{updatedAt}}</div>
            <div class="post-category">Category: {{category}}</div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Middle Column --}}
    <div class="col-md-1">
    </div>

    {{!-- Right Column --}}
    <div class="col-md-4 jumbotron">

      {{!-- Post Form Panel --}}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Post Form</h3>
        </div>
        <div class="panel-body" id="postFormPanelBody">
          <form id="cms">
            <div class="form-group">
              <textarea class="form-control" rows="10" id="postBody" placeholder="I absolutely hate..."></textarea>
              <br>
              <div class="form-group">
                <select class="custom-select" id="postCategory">
                  <option value="null" selected="" disabled="">Category...</option>
                  <option value="Politics">Politics</option>
                  <option value="School">School</option>
                  <option value="Fashion">Fashion</option>
                  <option value="Food">Food</option>
                  <option value="Transportation">Transportation</option>
                  <option value="Weather">Weather</option>
                  <option value="Teens">Teens</option>
                  <option value="Coding">Coding</option>
                  <option value="People">People</option>
                  <option value="Love">Love</option>
                  <option value="Health">Health</option>
                </select>
              </div>
            </div>
          </form>
        </div>
        <div class="panel-footer">
          <div class="postFormSubmitButton">
            <button id="postFormSubmit" type="submit" class="btn btn-success submit btn-lg">Submit</button>
          </div>
        </div>
      </div>
      {{!-- End of Post Form Panel --}}

    </div>
    {{!-- End of Right Column --}}

  </div>
  {{!-- End of Row --}}

</div>
{{!-- End of Container --}}

