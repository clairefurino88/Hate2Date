<div class="container">
  <div class="row">
    {{!-- Left Column --}}
    <div class="col-md-7" class="left-panel">
      <div class="post-area">
        <p id="liveFeedTitle">
          Hate Feed
        </p>
        <p id="share">
          Share your story...
        </p>
        {{#each posts}}
        <div class="panel post-panel">
          <div class="panel-body">
            <div class="panel-heading" id="postStyle">{{User.name}}:</div>
            {{body}}
            <hr>
            <div class="post-datetime">{{updatedAt}}</div>
            <div class="post-category">Category: {{category}}</div>
            <br>
            <div class="like-button">
              <button type="button">I Hate That Too!</button>
              <spain class="count"></spain>
            </div>
          </div>
        </div>
        
        {{/each}}
      </div>
    </div>
    {{!-- Middle Column --}}
    <div class="col-md-1">
    </div>
    {{!-- Right Column --}}
    <div class="col-md-4">
      {{!-- Post Form Panel --}}
      <div class="panel post-form">
        <div class="panel-heading">
          <p id="liveFeedTitle" class="panel-title" >Post Form</p>
        </div>
        <div class="panel-body" id="postFormPanelBody">
          <form id="cms">
            <div class="form-group">
              <textarea class="form-control" rows="10" id="postBody" placeholder="I absolutely hate..."></textarea>
              <br>
              <div class="form-group">
                <select class="custom-select" id="postCategory">
                 
                  <option value="null" selected="" disabled="">Category...</option>
                  <option value="Coding">Coding</option>
                  <option value="Entertainment">Entertainment</option>
                  <option value="Fashion">Fashion</option>
                  <option value="Food">Food</option>
                  <option value="Health">Health</option>
                  <option value="Love">Love</option>
                  <option value="Money">Money</option>
                  <option value="People">People</option>
                  <option value="Politics">Politics</option>
                  <option value="School">School</option>
                  <option value="People">People</option>
                  <option value="Teens">Teens</option>
                  <option value="Transportation">Transportation</option>
                  <option value="Weather">Weather</option>
                  
                </select>
              </div>
            </div>
          </form>
        </div>
        <div>
          <div class="postFormSubmitButton">
          <center>  <button id="postFormSubmit" type="submit" class="btn btn-success submit btn-lg">Submit</button></center>
          </div>
        </div>
      </div>
      {{!-- End of Post Form Panel --}}
    </div>
    {{!-- End of Right Column --}}
  </div>
  {{!-- End of Row --}}
</div>
{{!-- End of Container --}}
